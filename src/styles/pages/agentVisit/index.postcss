.page-visit {
  .visit-detail {
    position: relative;
    padding: 20rpx 22rpx 0 26rpx;
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 20rpx;
      background-color: #f5f5f5;
    }
    &__title {
      padding: 25rpx 0;
      font-size: 34rpx;
    }
  }
  .visit-form {
    position: relative;
    &__item {
      position: relative;
      height: 88rpx;
      color: #666;
      &:not(:last-child)::after{
        position: absolute;
        content: "";
        height: 1rpx;
        width: 100%;
        left: 0;
        bottom: 0;
        transform: scaleY(0.5);
        background-color: #ededed;
      }
      .label {
        color: #333;
      }
    }
  }
  .visit-upload {
    position: relative;
    padding: 56rpx 22rpx 0 26rpx;
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 20rpx;
      background-color: #f5f5f5;
    }
    .upload-label {
      line-height: 1;
    }
    .icon-upload {
      width: 372rpx;
      height: 242rpx;
      margin-left: 35rpx;
      margin-bottom: 20rpx;
    }
  }
  .visit-btn {
    padding: 65rpx 100rpx 80rpx;
  }
}